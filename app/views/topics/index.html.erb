<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
<!--       <th>Description</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
 <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, topic %></td>
      <td><%= pluralize(topic.votes.count, "vote") %></td>
      <td><%= button_to '+1', votes_path(topic_id: topic.id), method: :post %></td>
      <% if topic.votes.size > 0 %>
        <td><%= button_to '-1', vote_path(id: topic.votes.first.id), method: :delete %></td>
      <% end %>
      <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

